<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivation"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:paddingLeft="20dp"
        android:fontFamily="@font/bold"
        android:layout_marginTop="15dp"
        android:id="@+id/heading"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No motivation to start or lost it midway through?"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:layout_below="@id/heading"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="15dp"
        android:id="@+id/text2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Here’s your daily motivational quote:"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:layout_below="@id/text2"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="15dp"
        android:id="@+id/text3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quoteLayout"
        android:orientation="vertical"
        android:layout_below="@id/text3"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:background="@drawable/cardbg">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“ Success is not final; failure is not fatal; it is the courage to continue that counts “"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_below="@id/text2"
            android:padding="15dp"
            android:fontFamily="@font/medium"
            android:id="@+id/quote"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-Winston Churchill"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:textSize="21sp"
            android:layout_below="@id/text2"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:fontFamily="@font/medium"
            android:id="@+id/author"/>

    </LinearLayout>

</RelativeLayout>