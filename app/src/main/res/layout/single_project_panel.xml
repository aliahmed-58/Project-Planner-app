<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cardbg"
        android:elevation="12dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout" >

            <TextView
                android:id="@+id/projectName"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"
                android:textSize="25sp"
                android:text="Frontend Website" />

            <CheckBox
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Completed" />


        </LinearLayout>

    <TextView
        android:id="@+id/headingDesc"
        android:layout_below="@id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="22sp"
        android:text="Description: " />

    <TextView
        android:id="@+id/desc"
        android:layout_below="@id/headingDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:text="The main goal of this project is to learn all about how frontend websites are created and to secure a gig soon."  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateLayout"
        android:orientation="horizontal"
        android:layout_below="@id/desc">
    <TextView
        android:id="@+id/heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="22sp"
        android:text="Deadline: " />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:text="20/2/21 | 12/2/42 " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:orientation="horizontal"
        android:layout_below="@id/dateLayout">
    <TextView
        android:id="@+id/heading9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="22sp"
        android:text="Days left: " />

    <TextView
        android:id="@+id/daysLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:text="10" />

    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>